<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/constraintLayoutSales"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/buttonBackHome"
        android:drawableStart="@drawable/ic_home"
        android:text="@string/backHome"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBackHome"
        app:layout_constraintEnd_toStartOf="@id/buttonSearch"
        />
    <Button
        android:id="@+id/buttonSearch"
        android:drawableStart="@drawable/ic_search"
        android:text="@string/search"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBackHome"
        app:layout_constraintStart_toEndOf="@+id/editTextSearch"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCustomerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearch"
        />


    <Button
        android:id="@+id/buttonCreateCustomer"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_add_quantity"
        android:paddingBottom="5dp"
        android:text="@string/createProduct"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewCustomerList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>