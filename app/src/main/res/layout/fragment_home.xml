<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
            android:id="@+id/textViewWelcome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/buttonHomeToProductList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/productList"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/buttonHomeToCustomersList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/customersList"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonHomeToProductList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/buttonHomeToSaleList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/saleList"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonHomeToCustomersList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
